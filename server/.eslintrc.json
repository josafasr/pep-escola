{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["off", "always"],
    "eol-last": ["off", "always"],
    "no-unused-vars": "warn",
    "comma-dangle": "off",
    "mport/prefer-default-export": "off",
    "no-unused-expressions": "off",
    "max-len": "off",
    "no-sequences": "off"
  }
}